{% macro reportmetatags(item) %}

<meta name="citation_abstract" content="{{item.abstract}}">
{%if item.citation_author[0]%}
<meta name="citation_author" content="{{item.citation_author[0]}}">
{%endif%}
{%if item.citation_author[1]%}
<meta name="citation_author" content="{{item.citation_author[1]}}">
{%endif%}
{%if item.citation_author[2]%}
<meta name="citation_author" content="{{item.citation_author[2]}}">
{%endif%}
<meta name="citation_publication_date" content="{{item.date_meta}}">
<meta name="citation_keywords" content="{{item.keywords}}">
<meta name="citation_language" content="English">
{%if item.pdf.name%}
<meta name="citation_pdf_url" content="https://sentienceinstitute.org/downloads/{{item.pdf.name}}.pdf">
{%elif item.pdf.url%}
<meta name="citation_pdf_url" content="{{item.pdf.url}}">
{%endif%}
<meta name="citation_public_url" content="https://sentienceinstitute.org/{{item.url}}">
<meta name="citation_publisher" content="Sentience Institute">
<meta name="citation_series_title" content="{{item.series}}">
<meta name="citation_title" content="{{item.title}}">

{% endmacro %}
